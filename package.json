{
  "name": "@unqa/ucss",
  "description": "uCss is a modern, mobile-first, pure CSS framework designed for granular control, responsiveness, and flexibility. It leverages CSS Variables and Container Queries to provide a highly adaptable styling API without the need for complex build steps or JavaScript.",
  "version": "0.0.1",
  "main": "dist/stable/u.min.css",
  "style": "dist/stable/u.min.css",
  "exports": {
    ".": {
      "style": "./dist/stable/u.min.css",
      "default": "./dist/stable/u.min.css"
    },
    "./full": "./dist/stable/u.css",
    "./clean": "./dist/stable/u.clean.css",
    "./config": "./dist/stable/lib/config.min.css",
    "./base": "./dist/stable/lib/base.min.css",
    "./layout": "./dist/stable/lib/layout.min.css",
    "./typography": "./dist/stable/lib/typography.min.css",
    "./components": "./dist/stable/lib/components.min.css",
    "./theming": "./dist/stable/lib/theming.min.css",
    "./utilities": "./dist/stable/lib/utilities.min.css"
  },
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "security": "npm audit",
    "build": "node scripts/build.js",
    "build:full": "node scripts/build.js full",
    "build:all": "node scripts/build.js all",
    "build:stable": "node scripts/build.js stable",
    "build:latest": "node scripts/build.js latest",
    "build:preview": "node scripts/build.js preview",
    "build:prefixed": "node scripts/build.js p",
    "build:c": "node scripts/build.js c",
    "build:v": "node scripts/build.js v",
    "clean": "node scripts/clean.js",
    "clean:all": "node scripts/clean.js all",
    "clean:nuke": "npm run clean:all",
    "clean:safe": "node scripts/clean.js safe",
    "clean:preview": "node scripts/clean.js preview",
    "clean:latest": "node scripts/clean.js latest",
    "clean:stable": "node scripts/clean.js stable",
    "wipe": "npm run clean",
    "remote:cleanup": "node scripts/remote.js --cleanup",
    "remote:wipe": "node scripts/remote.js --wipe && npm run deploy:all",
    "remote:nuke": "node scripts/remote.js --wipe all",
    "remote:wipe:all": "node scripts/remote.js --wipe all",
    "remote:wipe:safe": "node scripts/remote.js --wipe safe",
    "remote:wipe:preview": "node scripts/remote.js --wipe preview",
    "remote:wipe:stable": "node scripts/remote.js --wipe stable",
    "remote": "npm run remote:wipe",
    "nuke": "node scripts/confirm.js \"This script will delete all the files from both local and server environments, are you sure to run?\" && npm run clean:nuke && npm run remote:nuke",
    "deploy": "node scripts/deploy.js",
    "deploy:stable": "node scripts/deploy.js stable",
    "deploy:latest": "node scripts/deploy.js latest",
    "deploy:preview": "node scripts/deploy.js preview",
    "deploy:all": "npm run deploy:stable && npm run deploy:latest && npm run deploy p && npm run deploy v",
    "rebuild": "node scripts/confirm.js \"Rebuild will clean (NUKE) and deploy everything. Sure?\" && npm run clean:nuke && npm run deploy:all",
    "reprod": "node scripts/confirm.js \"Reprod will clean (NUKE) and deploy STABLE, P, V. Sure?\" && npm run clean:nuke && npm run deploy:stable && npm run deploy p && npm run deploy v",
    "redev": "node scripts/confirm.js \"Redev will clean (LATEST) and deploy LATEST. Sure?\" && npm run clean:latest && npm run deploy:latest",
    "watch": "node scripts/watch.js",
    "manifest": "node scripts/manifest.js",
    "prepublishOnly": "node scripts/build.js stable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ohshukhrat/uCss.git"
  },
  "keywords": [
    "css",
    "framework",
    "mobile-first",
    "css-variables",
    "container-queries"
  ],
  "author": "Shukhrat @ UNQA",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/ohshukhrat/uCss/issues"
  },
  "homepage": "https://ucss.unqa.dev",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist/stable",
    "dist/manifest.json",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "basic-ftp": "^5.0.4",
    "dotenv": "^17.2.3",
    "marked": "17.0.1"
  }
}